{
  "name": "taintflow",
  "version": "0.0.0",
  "description": "TaintFlow, a framework for JavaScript dynamic information flow analysis.",
  "author": "Arthur Khashaev <arthur@khashaev.ru>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/Invizory/taintflow",
  "bugs": "https://github.com/Invizory/taintflow/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Invizory/taintflow.git"
  },
  "engines": {
    "node": ">=6.5.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "test": "mocha --compilers ts-node/register 'test/**/*.spec.ts'",
    "test:coverage": "nyc npm test",
    "lint": "tslint 'packages/*/src/**/*.ts' 'test/**/*.ts'"
  },
  "devDependencies": {
    "@types/babel-core": "^6.7.13",
    "@types/babel-generator": "^6.7.14",
    "@types/chai": "^3.4.32",
    "@types/mocha": "^2.2.34",
    "@types/node": "^6.0.52",
    "babel-core": "^6.21.0",
    "babel-generator": "^6.21.0",
    "babel-preset-latest": "^6.16.0",
    "chai": "^3.5.0",
    "lerna": "2.0.0-beta.31",
    "mocha": "^3.0.2",
    "nyc": "^10.1.2",
    "ts-node": "^2.1.0",
    "tslint": "^4.1.1",
    "tslint-microsoft-contrib": "^4.0.0",
    "typescript": "^2.1.4"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 90,
    "include": "packages/*/src/**/*.ts",
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ]
  }
}
